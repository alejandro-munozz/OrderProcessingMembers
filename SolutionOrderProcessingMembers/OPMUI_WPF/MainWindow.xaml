<Window x:Class="OPMUI_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OPMUI_WPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Events" Grid.Row="0"/>
        <DataGrid Grid.Row="1" Name="EventsOverviewDataGrid">
            <DataGrid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Buy Ticket(s)" Click="BuyTicket_Click"/>
                </ContextMenu>
            </DataGrid.ContextMenu>
        </DataGrid>
        <TextBlock Text="Order" Grid.Row="2"/>
        <DataGrid Grid.Row="3" Name="OrderOverviewDataGrid"/>
        <Button Grid.Row="4" Content="Place Order"/>

    </Grid>
</Window>
